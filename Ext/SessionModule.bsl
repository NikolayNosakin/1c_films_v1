			#Если НЕ МобильноеПриложениеСервер Тогда
				ПодробнаяИнформацияОбОшибке = ПодробноеПредставлениеОшибки(ИнформацияОбОшибке());
				ТекстОшибки = СтрШаблон("Не удалось установить главный стиль ""%1"" по причине:
				|%2",ТекущийСтиль,ПодробнаяИнформацияОбОшибке);					
				ЗаписьЖурналаРегистрации("Установка главного стиля приложения",УровеньЖурналаРегистрации.Предупреждение,,,ТекстОшибки); 
			#КонецЕсли
		КонецПопытки;	 
	КонецЕсли;
	
