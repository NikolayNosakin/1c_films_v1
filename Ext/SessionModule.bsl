		ТекущийСтиль = "СтильОформленияСиний";
	ИначеЕсли ТекущийСтиль = Перечисления.СтилиОформления.СтильОформленияТемный Тогда
		ТекущийСтиль = "СтильОформленияТемный";
	Иначе	
		ТекущийСтиль = "";
	КонецЕсли; 
	
	Если ТекущийСтиль = "" Тогда
		//ГлавныйСтиль = Новый Стиль;
	Иначе
		Попытка
			
			ГлавныйСтиль = БиблиотекаСтилей[ТекущийСтиль];
